<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/iv_live_frame"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/load_error" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_live_item_bg">

        <ImageButton
            android:id="@+id/ib_locate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/position_normal" />

        <TextView
            android:id="@+id/tv_live_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/ib_locate"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="武汉市某地现场抢修视频"
            android:textColor="#fdfdfd"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_live_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/ib_locate"
            android:visibility="gone"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="中华人名共和国湖北省武汉市洪山区关山大道598号中地数码科技园内"
            android:textColor="#b3fcfbfb"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>