<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="68dp"
    android:paddingRight="15dp"
    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/txt_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#1a1a1a"
        tools:text="检漏维修 - 分派"/>

    <TextView
        android:id="@+id/txt_action_undertakeman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_action"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:textColor="#1a1a1a"
        tools:text="承办人：普陀承诺维修部 - 唐荣华"/>

    <TextView
        android:id="@+id/txt_action_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_action_undertakeman"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:textColor="#1a1a1a"
        tools:text="描述：下午派人抢修"/>

    <TextView
        android:id="@+id/txt_action_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#8e8e8e"
        android:layout_below="@id/txt_action_desc"
        android:layout_marginTop="7dp"
        tools:text="2015-07-12 20:34:34"/>

    <TextView
        android:id="@+id/txt_action_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#8e8e8e"
        android:layout_below="@id/txt_action_time"
        android:layout_marginTop="7dp"
        android:visibility="gone"
        tools:text="2015-07-12 21:34:36"/>

    <TextView
        android:id="@+id/txt_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#3dd1a5"
        android:layout_alignParentRight="true"
        tools:text="Hello"/>

</RelativeLayout>