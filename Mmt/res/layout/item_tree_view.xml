<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:descendantFocusability="blocksDescendants">

    <com.mapgis.mmt.common.widget.treeview.ThreeStatusCheckBox
        android:id="@+id/threeStatusCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        app:checkStatus="checkNone"/>


    <ImageButton
        android:id="@+id/ib_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingRight="20dp"
        android:src="@drawable/arrow_up"/>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/ib_expand"
        android:layout_toRightOf="@id/threeStatusCheckBox"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>

    <!--<RadioButton
        android:layout_gravity="right|center_vertical"
        android:id="@+id/rb_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/selector_radio_button" />-->

</RelativeLayout>