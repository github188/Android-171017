<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActionBar"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/main_menu_top">

    <ImageButton
        android:id="@+id/edittext_seach_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/default_actionbar"
        android:src="@drawable/common_back" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/default_actionbar"
            android:src="@drawable/search_white" />

        <ImageButton
            android:id="@+id/btn_result"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/default_actionbar"
            android:src="@drawable/detail"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext_seach_str"
        style="@style/default_text_medium_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_layout"
        android:layout_toRightOf="@id/edittext_seach_back"
        android:background="@drawable/default_input_edit"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="搜索地图" />

</RelativeLayout>