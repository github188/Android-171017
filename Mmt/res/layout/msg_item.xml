<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMsgItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/msgItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/undo" />

    <TextView
        android:id="@+id/msgItemReciever"
        style="@style/default_text_medium_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/msgItemDate"
        android:layout_toRightOf="@+id/msgItemImage"
        android:minWidth="40dip"
        android:text="姓名"
        android:visibility="visible" />

    <TextView
        android:id="@+id/msgItemDate"
        android:textSize="12sp"
        android:textColor="#77000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="时间" />

    <TextView
        android:id="@+id/msgItemDetail"
        style="@style/default_text_medium_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgItemReciever"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@+id/msgItemDelete"
        android:layout_toRightOf="@+id/msgItemImage"
        android:text="内容"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/msgItemDelete"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/msgItemReciever"
        android:layout_marginRight="5dp"
        android:background="@color/default_no_bg"
        android:src="@drawable/delete"
        android:text="删除" />

</RelativeLayout>