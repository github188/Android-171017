<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fffdfdfe"
                android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:id="@+id/textContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/index"
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:text="1"/>

        <TextView
            android:id="@+id/content"
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/verLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textContent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_line_bg"
            android:contentDescription="@string/text_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verLine"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maintenanceListItemLocation"
            style="@style/default_text_small_purity"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/layout_focus_bg"
            android:gravity="center"
            android:text="定位"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/default_line_bg"
            android:contentDescription="@string/text_image"/>

        <TextView
            android:id="@+id/maintenanceListItemDetail"
            style="@style/default_text_small_purity"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/layout_focus_bg"
            android:gravity="center"
            android:text="详情"/>
    </LinearLayout>


</RelativeLayout>