<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/find_webmap_title_text"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/snow"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/auxType"
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/icon_poilist_down_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="全部"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvDetail"
        style="@style/ListView.defList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"/>
</LinearLayout>