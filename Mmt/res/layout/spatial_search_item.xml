<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="64.0dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/css_header_bar_button"
        android:src="@drawable/icon_lcoding" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ItemTitle"
                style="@style/default_text_medium_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:singleLine="true" />

            <TextView
                android:id="@+id/ItemText"
                style="@style/default_text_small_purity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ItemTitle"
                android:layout_below="@id/ItemTitle"
                android:singleLine="true" />

            <TextView
                android:id="@+id/ItemDistance"
                style="@style/default_text_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ItemTitle"
                android:layout_below="@id/ItemText"
                android:singleLine="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/BtnDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="16.0dip"
        android:background="@drawable/css_header_bar_button"
        android:src="@drawable/item_detail"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16.0dip"
        android:checked="true"
        android:singleLine="true"
        android:text="有效"
        android:textColor="#99cc00"
        android:visibility="gone" />

</LinearLayout>