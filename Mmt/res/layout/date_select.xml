<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        style="@style/default_text_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal"
        android:text="选择时间区间"
        android:textColor="@color/progressbar_blue" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:src="@color/progressbar_blue" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/start_date_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/css_button_default"
            android:text="起始日期"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/year_start"
            style="@style/default_text_medium_1"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:gravity="center"
            android:hint="年" />

        <TextView
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/month_start"
            style="@style/default_text_medium_1"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="月" />

        <TextView
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/day_start"
            style="@style/default_text_medium_1"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="日" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/end_date_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/css_button_default"
            android:text="结束日期"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/year_end"
            style="@style/default_text_medium_1"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:gravity="center"
            android:hint="年" />

        <TextView
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/month_end"
            style="@style/default_text_medium_1"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="月" />

        <TextView
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/day_end"
            style="@style/default_text_medium_1"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="日" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_marginTop="3.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/date_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/css_button_default"
            android:minWidth="100dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/date_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/css_button_default"
            android:minWidth="100dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>