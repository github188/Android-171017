<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="移动网络:"
                        android:textColor="@color/default_text_purple"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt3G"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已连接"
                        android:textColor="@color/default_text_purple"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIFI网络:"
                        android:textColor="@color/default_text_purple"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtWifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已连接"
                        android:textColor="@color/default_text_purple"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/setting_image_ip" />

                <TextView
                    style="@style/default_text_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:layout_weight="0"
                    android:minWidth="80dip"
                    android:text="IP地址:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtServer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="192.168.10.248"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/txtPort"
                    android:textColor="@color/default_text_light_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/spinnerImg"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_weight="0"
                    android:src="@drawable/shaoxing_login_expand1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="16dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_image_port" />

                <TextView
                    style="@style/default_text_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:minWidth="80dip"
                    android:text="端口:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="80"
                    android:maxLines="1"
                    android:textColor="@color/default_text_light_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="16dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_image_path" />

                <TextView
                    style="@style/default_text_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:minWidth="80dip"
                    android:text="虚拟目录:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtVirtualPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="#00000000"
                    android:text="CityInterface"
                    android:maxLines="1"
                    android:textColor="@color/default_text_light_black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/gps_receiver" />

                <TextView
                    style="@style/default_text_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:layout_weight="0"
                    android:minWidth="80dip"
                    android:text="定位方式:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtGPS"
                    android:layout_width="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="默认"
                    android:maxLines="1"
                    android:textColor="@color/default_text_light_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivGPSMore"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_weight="0"
                    android:src="@drawable/shaoxing_login_expand1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#22000000" />

            <LinearLayout
                android:id="@+id/vpn_control_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:visibility="gone" >

                <TextView
                    style="@style/textview_dialog_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启用VPN设置"
                    android:textSize="18dp" />

                <CheckBox
                    android:id="@+id/vpn_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/vpn_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <!-- vpn VPNSettingFragment -->
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dip" >

                <Button
                    android:id="@+id/btnNetTest"
                    android:layout_width="140dip"
                    android:layout_height="50dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/css_button_default"
                    android:gravity="center"
                    android:text="测试连接"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="140dip"
                    android:layout_height="50dip"
                    android:background="@drawable/css_button_default"
                    android:gravity="center"
                    android:text="保存设置"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" >
    </ProgressBar>

</RelativeLayout>