<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mapgis.mmt.common.widget.customview.MyViewpager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.mapgis.mmt.common.widget.customview.MyViewpager>

    <LinearLayout
        android:id="@+id/pictureViewBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/leftRotate"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/layout_focus_bg"
            android:padding="5dp"
            android:src="@drawable/icon_rotate_left" />

        <ImageView
            android:id="@+id/rightRotate"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/layout_focus_bg"
            android:padding="5dp"
            android:src="@drawable/icon_rotate_right" />
    </LinearLayout>

</RelativeLayout>