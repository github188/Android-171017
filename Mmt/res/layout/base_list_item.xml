<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_focus_bg"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:id="@+id/itemIndexLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemIndex"
            style="@style/default_text_medium_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            tools:text="1." />

    </LinearLayout>

    <TextView
        android:id="@+id/desc_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:textSize="14sp"
        tools:text="5 台" />

    <TextView
        android:id="@+id/desc_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/desc_top_right"
        android:layout_toRightOf="@id/itemIndexLayout"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Hewlett Packard 台式主机" />

    <TextView
        android:id="@+id/desc_mid_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_top_left"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/itemIndexLayout"
        android:textColor="@color/callout_background"
        android:textSize="15sp"
        tools:text="流畅、散热好" />

    <TextView
        android:id="@+id/desc_mid_bottom_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_mid_left"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/itemIndexLayout"
        android:textColor="@color/callout_background"
        android:textSize="15sp"
        tools:text="显示器不行啊" />

    <TextView
        android:id="@+id/desc_bottom_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/desc_mid_bottom_left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        tools:text="1000 km" />

    <TextView
        android:id="@+id/desc_bottom_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_mid_bottom_left"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/desc_bottom_right"
        android:layout_toRightOf="@id/itemIndexLayout"
        android:textColor="@color/callout_background"
        android:textSize="15sp"
        tools:text="工厂 - 物料库" />

</RelativeLayout>