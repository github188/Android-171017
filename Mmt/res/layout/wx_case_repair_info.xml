<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutRepair"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvRepairForMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="维修信息"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffe8eaea"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前阶段："
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff858585"/>

        <TextView
            android:id="@+id/tvRepairStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完工"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报人员："
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff858585"/>

        <TextView
            android:id="@+id/tvRepairer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴剑/城中分中心"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报时间："
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff858585"/>

        <TextView
            android:id="@+id/tvRepairTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-07-09 20:12:29.000"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述信息："
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff858585"/>

        <TextView
            android:id="@+id/tvRepairDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现场处理了"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRepairImagesRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现场图片："
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff858585"/>

        <com.mapgis.mmt.common.widget.customview.MmtImagesViewer
            android:id="@+id/layoutRepairImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRepairAudiosRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现场录音："
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff858585"/>

        <com.mapgis.mmt.common.widget.customview.MmtAudiosViewer
            android:id="@+id/layoutRepairAudios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>