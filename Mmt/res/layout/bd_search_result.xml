<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ListView
        android:id="@+id/BDResultListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/item_focus_bg" />

    <LinearLayout
        android:id="@+id/BDResultLayout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mapview_bottombar_bg"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/BDResultPreView"
            style="@style/default_text_medium_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上一页" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/default_line_bg" />

        <TextView
            android:id="@+id/BDResultNextView"
            style="@style/default_text_medium_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下一页" />
    </LinearLayout>

</RelativeLayout>