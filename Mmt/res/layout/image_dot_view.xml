<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minHeight="48dp">

    <ImageView
        android:id="@+id/imageDotViewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/handoverfo_clock"/>

    <TextView
        android:id="@+id/imageDotViewKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imageDotViewImage"/>

    <EditText
        android:id="@+id/imageDotViewValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/imageDotViewMust"
        android:layout_toRightOf="@+id/imageDotViewKey"
        android:background="@color/default_no_bg"
        android:minWidth="180dip"/>

    <TextView
        android:id="@+id/imageDotViewMust"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/imageDotViewButton"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/sketch_last_vertex_background_color"/>

    <ImageButton
        android:id="@+id/imageDotViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@color/default_no_bg"
        android:src="@drawable/button_for_more"/>

</RelativeLayout>