<?xml version="1.0" encoding="utf-8"?>
<!-- ListView tree字段 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="40dip" >

    <TextView
        android:id="@+id/tvPadding"
        style="@style/default_text_medium_1"
        android:layout_width="2dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|left" >
    </TextView>

    <ImageView
        android:id="@+id/ivExEc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="2dip"
        android:paddingRight="2dip" >
    </ImageView>

    <CheckBox
        android:id="@+id/chbSelect"
        style="@style/default_text_medium_1"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/tvPadding"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical" >
    </CheckBox>

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/chbSelect"
        android:gravity="center_vertical" >
    </ImageView>

    <TextView
        android:id="@+id/tvText"
        style="@style/default_text_medium_1"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_toLeftOf="@id/ivExEc"
        android:layout_toRightOf="@id/ivIcon"
        android:gravity="center_vertical|left"
        android:paddingLeft="2dip" >
    </TextView>

</RelativeLayout>