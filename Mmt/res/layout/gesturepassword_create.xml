<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/gesture_background"
              android:orientation="vertical">

    <Space
        android:id="@+id/gesturepwd_creat_gap1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gesture_create_grid_bg"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_6dp">

            <View
                android:id="@+id/gesturepwd_setting_preview_0"
                style="@style/style_gesture_unlock_notice"/>

            <View
                android:id="@+id/gesturepwd_setting_preview_1"
                style="@style/style_gesture_unlock_notice"
                android:layout_marginLeft="@dimen/dimen_6dp"/>

            <View
                android:id="@+id/gesturepwd_setting_preview_2"
                style="@style/style_gesture_unlock_notice"
                android:layout_marginLeft="@dimen/dimen_6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_6dp">

            <View
                android:id="@+id/gesturepwd_setting_preview_3"
                style="@style/style_gesture_unlock_notice"/>

            <View
                android:id="@+id/gesturepwd_setting_preview_4"
                style="@style/style_gesture_unlock_notice"
                android:layout_marginLeft="@dimen/dimen_6dp"/>

            <View
                android:id="@+id/gesturepwd_setting_preview_5"
                style="@style/style_gesture_unlock_notice"
                android:layout_marginLeft="@dimen/dimen_6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_6dp">

            <View
                android:id="@+id/gesturepwd_setting_preview_6"
                style="@style/style_gesture_unlock_notice"
                android:background="@drawable/trans"/>

            <View
                android:id="@+id/gesturepwd_setting_preview_7"
                style="@style/style_gesture_unlock_notice"
                android:layout_marginLeft="@dimen/dimen_6dp"/>

            <View
                android:id="@+id/gesturepwd_setting_preview_8"
                style="@style/style_gesture_unlock_notice"
                android:layout_marginLeft="@dimen/dimen_6dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/gesturepwd_creat_gap2"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_weight="1.0"/>

    <TextView
        android:id="@+id/gesturepwd_create_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:layout_marginTop="0.0dip"
        android:gravity="center_horizontal"
        android:shadowColor="#b3000000"
        android:shadowRadius="1.0"
        android:text="@string/string_draw_unlock_pattren"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_16sp"/>

    <View
        android:id="@+id/gesturepwd_creat_gap3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_8dp"
        android:layout_weight="1.0"/>

    <com.mapgis.mmt.module.systemsetting.locksetting.gesturepwd.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="288.0dip"
        android:layout_height="288.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"/>

    <View
        android:id="@+id/gesturepwd_creat_gap4"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset_btn"
            style="@style/ButtonRed"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string_redraw"/>

        <Button
            android:id="@+id/right_btn"
            style="@style/ButtonGreen"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string_save"/>
    </LinearLayout>

</LinearLayout>