<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActionBar"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/main_menu_top"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/repairTaskListTopbarBackButton"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:background="@drawable/default_actionbar"
        android:src="@drawable/common_back" />

    <TextView
        android:id="@+id/repairTaskListTopbarText"
        style="@style/default_text_medium_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="抢修工单"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/repairTaskListTopbarLocateButton"
        style="@style/default_text_small"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/default_actionbar"
        android:gravity="center"
        android:text="定位"
        android:textColor="#ffffff" />

</RelativeLayout>