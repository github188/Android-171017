<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/asset_make_sure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:background="@drawable/leba_bg_mid_selector"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/ivMakeSureLyt"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/leba_bg_right_selector"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    <ImageView
        android:id="@+id/ivMakeSure"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/css_header_bar_button"
        android:src="@drawable/button_reset_painter" />

    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8.0dip"
        android:text="计划反馈"
        android:textColor="#ff719e11"
        android:textSize="14.0sp" />

    </LinearLayout>

    <View
        android:id="@+id/divider_greeting_2"
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:background="@drawable/css_divider_line" />

    <LinearLayout
        android:id="@+id/asset_flowreport"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/leba_bg_right_selector"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgFlowReportByPipeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/css_header_bar_button"
            android:src="@drawable/detail_upload" />

        <TextView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8.0dip"
            android:text="事件上报"
            android:textColor="#ff719e11"
            android:textSize="14.0sp" />
    </LinearLayout>


</LinearLayout>