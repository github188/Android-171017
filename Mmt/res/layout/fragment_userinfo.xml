<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="@dimen/min_list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:src="@drawable/image_user" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#000"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/positionButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:paddingLeft="10dp"
        android:src="@drawable/position_normal" />

    <ImageButton
        android:id="@+id/viewTraceButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/list_item_margin_left"
        android:src="@drawable/trace_button_normal" />
</LinearLayout>
