<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:setting="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f1f1f1"
              android:orientation="vertical">

    <com.mapgis.mmt.module.systemsetting.itemwidget.SwitchItemSettingView
        android:id="@+id/autoDownloadOnWiFi"
        style="@style/style_setting_item"
        android:paddingLeft="@dimen/dimen_12dp"
        setting:checked="false"
        setting:text_title="WiFi自动下载"/>

    <TextView
        android:id="@+id/tv_map_save_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_6dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/text_darkGray"
        android:text="地图文件路径：storage/sdcard/0/CityMobile/Map"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>
</LinearLayout>