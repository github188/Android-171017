<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="3dp"
              android:paddingLeft="@dimen/dimen_4dp"
              android:paddingRight="@dimen/dimen_4dp"
              android:paddingTop="3dp">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="侯晨辉"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_16sp"/>

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_name"
            android:scaleType="fitEnd"
            android:src="@drawable/userinfo"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:lines="2"
        android:ellipsize="end"
        android:text="武汉市武昌区沙湖公园XXX路XX号"
        android:textColor="@color/color_0099a2"
        android:textSize="@dimen/text_14sp"/>

    <View
        android:id="@+id/view_vertical_divider"
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:layout_marginTop="3dp"
        android:background="@color/color_999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dept"
            style="@style/style_annotation_view_tip"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="A部门"/>

        <View
            android:id="@+id/view_horizontal_divider"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/color_999999"/>

        <TextView
            android:id="@+id/tv_role"
            style="@style/style_annotation_view_tip"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="检测员"/>
    </LinearLayout>
</LinearLayout>